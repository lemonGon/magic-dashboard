{% set siteName = 'Boozt' %}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="keywords" content="Boozt dashboard, Boozt analytics" >
        <meta name="description" content="Boozt dashboard is a magic and powerful tool for having all your data at your fingertips">
        <meta name="author" content="{{ siteName }}">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
            <link rel="stylesheet" href="assets/css/main.css" type="text/css">
        {% endblock %}

        <title>{% block title %} {{ siteName }} - {% endblock %}</title>
    </head>
    <body>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Boozt</a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li class="active">
                            <a href="#">Dashboard</a>
                        </li>
                        {#<li><a href="#">About</a></li>#}
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container-fluid text-center">
            <div class="row content">
                {% block body %}{% endblock %}
                <div class="col-sm-2 sidenav">
                    <div class="well">
                        <label for="dateFrom">Date from</label>
                        <input type="text" id="dateFrom" >
                    </div>
                    <div class="well" >
                        <label for="dateTo">Date To</label>
                        <input type="text" id="dateTo">
                    </div>
                </div>
            </div>
        </div>

        <footer class="container-fluid text-center">
            <p>Footer</p>
        </footer>


        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.min.js" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
            <script src="https://canvasjs.com/assets/script/jquery.canvasjs.min.js"></script>
            <script src="assets/js/scripts.js" type="text/javascript"></script>
            <script src="assets/js/events.js" type="text/javascript"></script>
            <script src="assets/js/graph.js" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
